<!-- Modal -->
<div class="modal fade" id="newMessageModal" tabindex="-1" role="dialog" aria-labelledby="newMessageModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newMessageModalLabel">New Message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/new-message">
          <div class="form-group">
            <label for="message_title">Title</label>
            <input class="form-control" name="message_title" placeholder="" type="text" />
          </div>
          <div class="form-group">
            <label for="message_text">Text</label>
            <textarea class="form-control" name="message_text"></textarea>
          </div>
          <input type="submit" id="message-form" class="d-none" />
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <label for="message-form" tabindex="0" class="btn btn-primary">Post</label>
      </div>
    </div>
  </div>
</div>